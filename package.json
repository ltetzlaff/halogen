    "preact": "^10.0.0-rc.0",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "tslint-lt": "^1.10.6",
    "typescript": "^3.5.3"
